---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import Features from '@components/sections/Features.astro';
import Solutions from '@components/sections/Solutions.astro';
import Process from '@components/sections/Process.astro';
import CTA from '@components/sections/CTA.astro';
const locale = 'en-ae'; // Using en-ae translations for Swiss English

const seo = {
  title: 'Vecia Switzerland - AI Agents Built for Precision, Privacy & Performance',
  description: 'AI automation solutions designed for Swiss precision. Maximum security, compliance, and performance.',
};
---

<BaseLayout {...seo}>
  <Hero locale={locale} />
  <Features locale={locale} />
  <Solutions locale={locale} />
  <Process locale={locale} />
  <CTA locale={locale} />
</BaseLayout>